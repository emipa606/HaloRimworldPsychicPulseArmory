<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>HRPP_PsychicShock</defName>
    <hediffClass>HRPP.CustomHediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <label>psychic shock</label>
    <makesSickThought>true</makesSickThought>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>true</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.01</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.11</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.31</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.4</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.41</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.61</minSeverity>
        <vomitMtbDays>0.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.6</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.6</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <HediffDef ParentName="DiseaseBase">
    <defName>HRPP_downed</defName>
    <label>downed</label>
    <labelNoun>downed</labelNoun>
    <defaultLabelColor>(0.0, 0.8, 0.45)</defaultLabelColor>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>
